<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoard">

    <fragment
        android:id="@+id/login"
        android:name="com.technologies.theone.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_userLists"
            app:destination="@id/userLists"
            app:popUpTo="@id/onBoard"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userLists"
        android:name="com.technologies.theone.UserLists"
        android:label="fragment_user_lists"
        tools:layout="@layout/fragment_user_lists" >
        <action
            android:id="@+id/action_userLists_to_userForm"
            app:destination="@id/userForm"
            app:popUpTo="@id/userLists"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_userLists_to_weather"
            app:destination="@id/weather"
            app:popUpTo="@id/userLists"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/onBoard"
        android:name="com.technologies.theone.OnBoard"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" >
        <action
            android:id="@+id/action_onBoard_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/onBoard"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_onBoard_to_userLists"
            app:destination="@id/userLists"
            app:popUpTo="@id/onBoard"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userForm"
        android:name="com.technologies.theone.UserForm"
        android:label="fragment_user_form"
        tools:layout="@layout/fragment_user_form" >
        <action
            android:id="@+id/action_userForm_to_userLists"
            app:destination="@id/userLists"
            app:popUpTo="@id/userLists"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/weather"
        android:name="com.technologies.theone.Weather"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather" >
        <action
            android:id="@+id/action_weather_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_weather_to_userLists"
            app:destination="@id/userLists"
            app:popUpTo="@id/userLists"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>